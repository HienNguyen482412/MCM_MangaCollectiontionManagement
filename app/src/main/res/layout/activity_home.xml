<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginVertical="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:background="@drawable/image_view_drawable"
            android:cropToPadding="true"
            android:padding="5dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/welcomecardc"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/btnMangaCollection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/mangacollectionicon"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:tooltipText="Bộ sưu tập"
                android:background="@drawable/image_view_drawable"
                android:layout_marginRight="5dp"/>
            <ImageButton
                android:id="@+id/btnAuthor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/authoricon"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:tooltipText="Tác giả"
                android:padding="5dp"
                android:background="@drawable/image_view_drawable"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"

            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/btnPublisher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/publisher_icon_1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:tooltipText="Nhà xuất bản"
                android:padding="5dp"
                android:background="@drawable/image_view_drawable"
                android:layout_marginRight="5dp"/>
            <ImageButton
                android:id="@+id/btnStatistic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/statisticiconc_1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:tooltipText="Thống kê"
                android:padding="5dp"
                android:background="@drawable/image_view_drawable"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>