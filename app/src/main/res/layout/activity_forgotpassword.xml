<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".forgotpassword">
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_backarrow" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TẠO LẠI MẬT KHẨU"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên đăng nhập"
        app:counterEnabled="true"
        app:helperTextTextColor="#E91E63"
        app:startIconDrawable="@drawable/ic_people"
        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
        app:boxStrokeWidth="3dp"
        app:boxStrokeWidthFocused="4dp"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtFPUsername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"

            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            app:counterEnabled="true"
            app:helperTextTextColor="#E91E63"
            app:startIconDrawable="@drawable/ic_lock"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="4dp"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFPPassword1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textSize="20sp"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xác nhận lại mật khẩu"
            app:counterEnabled="true"

            app:helperTextTextColor="#E91E63"
            app:startIconDrawable="@drawable/ic_lock"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="4dp"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFPPasswrod2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textSize="20sp"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã xác nhận"
            app:counterEnabled="true"
            app:counterMaxLength="6"
            app:helperTextTextColor="#E91E63"
            app:startIconDrawable="@drawable/ic_verify"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="4dp"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:helperText="Chọn icon bên phải để nhận mã xác nhận"
            app:endIconDrawable="@drawable/ic_send"
            app:endIconMode="custom"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFPConfirmedCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:maxLength="7"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFPRegister"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Tạo"
                android:textSize="20sp"
                app:backgroundTint="@null"
                android:layout_margin="3dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:padding="10dp"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFPRefresh"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Làm mới"
                android:textSize="20sp"
                app:backgroundTint="@null"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
        </LinearLayout></LinearLayout>


</LinearLayout>
